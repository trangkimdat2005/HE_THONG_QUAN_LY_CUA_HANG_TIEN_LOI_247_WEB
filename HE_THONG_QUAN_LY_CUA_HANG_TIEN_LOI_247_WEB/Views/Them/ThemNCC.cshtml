@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

@{

    ViewData["title"] = "Thêm Nhà Cung Cấp";
}
  <!-- Css riêng ở đây nha -->
  <link rel="stylesheet" href="~/assets/lib/select2/dist/css/select2.min.css">


  <!-- Main sidebar ở đây nha -->





  <main class="app-content">
    <div class="app-title">
      <div>
        <h1><i class="bi bi-truck"></i> Thêm Nhà Cung Cấp</h1>
        <p>Thêm thông tin nhà cung cấp mới vào hệ thống</p>
      </div>
      <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
        <li class="breadcrumb-item"><a href="#">Quản lý nhà cung cấp</a></li>
        <li class="breadcrumb-item"><a href="#">Thêm mới</a></li>
      </ul>
    </div>

    <div class="row">
      <div class="col-md-8 mx-auto" id="customer-form-container">
        <div class="tile">
          <h3 class="tile-title">Thông tin Nhà Cung Cấp</h3>
          <p>Dữ liệu sẽ được lưu vào hệ thống</p>
          <div class="tile-body">
            <form>
            <div class="mb-3">
                <label class="form-label">Mã nhà cung cấp (id)</label>
                <input class="form-control" type="text" placeholder="Mã sẽ được tạo tự động" readonly>
            </div>

              <div class="mb-3">
                <label class="form-label">Tên nhà cung cấp</label>
                <input class="form-control" type="text" placeholder="V.d: Công ty Cổ phần Sữa Việt Nam" required>
              </div>

              <div class="mb-3">
                <label class="form-label">Số điện thoại</label>
                <input class="form-control" type="tel" placeholder="V.d: 028xxxxxxx" required>
              </div>

              <div class="mb-3">
                <label class="form-label">Email</label>
                <input class="form-control" type="email" placeholder="V.d: info@vinamilk.com.vn" required>
              </div>

              <div class="mb-3">
                <label class="form-label">Địa chỉ</label>
                <textarea class="form-control" rows="3" placeholder="V.d: Số 10, Tân Trào, P. Tân Phú, Q.7, TP. HCM" required></textarea>
              </div>

              <div class="mb-3">
                <label class="form-label">Mã số thuế</label>
                <input class="form-control" type="text" placeholder="V.d: 0300588569" required>
              </div>

            </form>
          </div>
          <div class="tile-footer">
            <button class="btn btn-primary" type="button"><i class="bi bi-check-circle-fill me-2"></i>Lưu thông
              tin</button>
            <a class="btn btn-secondary" href="#"><i class="bi bi-x-circle-fill me-2"></i>Huỷ</a>
          </div>
        </div>
      </div>
    </div>
  </main>


