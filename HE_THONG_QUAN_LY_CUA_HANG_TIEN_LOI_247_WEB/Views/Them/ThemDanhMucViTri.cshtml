@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

@{

    ViewData["title"] = "Thêm Danh Mục Vị Trí";
}
  <!-- Main sidebar ở đây nha -->





<main class="app-content">
    <div class="app-title">
      <div>
        <h1><i class="bi bi-plus-square-dotted"></i> Thêm Danh Mục Vị Trí Mới</h1>
        <p>Tạo mới các khu vực, kệ hàng để quản lý lưu kho</p>
      </div>
      <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
        <li class="breadcrumb-item"><a href="#">Quản lý kho</a></li>
        <li class="breadcrumb-item"><a href="../QuanLy/QuanLyViTri.html">Danh sách vị trí</a></li>
        <li class="breadcrumb-item active"><a href="#">Thêm mới</a></li>
      </ul>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="tile">
          <h3 class="tile-title">Thông tin vị trí</h3>
          <div class="tile-body">
            <form class="row g-3" id="formThemViTri">
              <div class="form-group col-md-4">
                <label class="control-label fw-bold">Mã vị trí <span class="text-danger">*</span></label>
                <div class="input-group">
                    <input class="form-control" type="text" id="maViTri" placeholder="VD: KHO-A1, KE-B2..." required>
                    <button class="btn btn-secondary" type="button" id="btnGenMa" title="Tự động tạo mã">
                        <i class="fas fa-random"></i>
                    </button>
                </div>
                <small class="form-text text-muted">Mã phải là duy nhất, viết liền không dấu.</small>
              </div>

              <div class="form-group col-md-4">
                <label class="control-label fw-bold">Tên vị trí <span class="text-danger">*</span></label>
                <input class="form-control" type="text" id="tenViTri" placeholder="VD: Kệ A tầng 1..." required>
              </div>

              <div class="form-group col-md-4">
                <label class="control-label fw-bold">Loại vị trí <span class="text-danger">*</span></label>
                <select class="form-select" id="loaiViTri" required>
                  <option value="">-- Chọn loại vị trí --</option>
                  <option value="Kho">Kho lưu trữ (Thường)</option>
                  <option value="Kho lạnh">Kho lạnh / Tủ đông</option>
                  <option value="Kho mát">Kho mát</option>
                  <option value="Trưng bày">Kệ trưng bày (Cửa hàng)</option>
                  <option value="Kho tạm">Kho tạm / Hàng chờ xử lý</option>
                </select>
              </div>

              <div class="form-group col-md-6">
                <label class="control-label fw-bold">Sức chứa tối đa (Đơn vị SP)</label>
                <input class="form-control" type="number" id="sucChua" min="0" placeholder="VD: 1000 (Để trống nếu không giới hạn)">
              </div>

              <div class="form-group col-md-12">
                <label class="control-label fw-bold">Mô tả chi tiết</label>
                <textarea class="form-control" id="moTa" rows="4" placeholder="Nhập mô tả vị trí, ghi chú đặc biệt..."></textarea>
              </div>

              <div class="tile-footer col-md-12 mt-4 text-end">
                <a class="btn btn-secondary me-2" href="../QuanLyKhoHang/ViTriSanPham.html">
                    <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                </a>
                <button class="btn btn-primary" type="button" id="btnLuuLai">
                    <i class="fas fa-save me-1"></i> Lưu lại
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script src="~/assets/js/QuanLyKhoHang/ViTriSanPham.js"></script>

