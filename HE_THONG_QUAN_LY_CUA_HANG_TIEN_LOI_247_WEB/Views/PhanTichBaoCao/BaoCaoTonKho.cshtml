                    <a class="btn btn-success btn-sm" href="#" title="Tải về (Excel)">
                      <i class="fas fa-download"></i>
                    </a>
                  </td>
                </tr>

                <tr>
                  <td>BCTK002</td>
                  <td>01/10/2025</td>
                  <td>1100</td> <td class="text-center">
                    <a class="btn btn-success btn-sm" href="#" title="Tải về (Excel)">
                      <i class="fas fa-download"></i>
                    </a>
</td>
                </tr>
                
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
