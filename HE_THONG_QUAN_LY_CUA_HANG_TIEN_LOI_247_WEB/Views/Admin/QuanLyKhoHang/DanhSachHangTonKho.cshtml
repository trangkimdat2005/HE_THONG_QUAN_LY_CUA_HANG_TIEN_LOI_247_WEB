@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.entities;

@{

    ViewData["title"] = "Danh Sách Hàng Tồn Kho";
}
  <!-- Css riêng ở đây nha -->
<link rel="stylesheet" href="~/assets/css/DanhSachHangTonKho.css">

  <!-- Main sidebar ở đây nha -->






  <main class="app-content">
    <div class="app-title">
      <div>
        <h1><i class="bi bi-box-seam"></i> Quản lý Tồn Kho</h1>
        <p>Theo dõi số lượng tồn kho của tất cả sản phẩm</p>
      </div>
      <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
        <li class="breadcrumb-item">Quản lý kho hàng</li>
        <li class="breadcrumb-item active">
          <a href="#">Danh sách hàng tồn kho</a>
        </li>
      </ul>
    </div>

    <div class="row" id="main-row-container">
      
      <div class="col-md-12" id="list-col">
        <div class="tile">
          <div class="tile-title-w-btn d-flex justify-content-between align-items-center">
            <h3 class="title" style="margin-bottom: 0">Danh Sách Tồn Kho</h3>
          </div>

          <div class="tile-body">
            <div class="row mb-3">
              <div class="col-md-3">
                <label class="form-label">Từ ngày</label>
                <input class="form-control" type="date" />
              </div>
              <div class="col-md-3">
                <label class="form-label">Đến ngày</label>
                <input class="form-control" type="date" />
              </div>
              <div class="col-md-3">
                <label class="form-label">Trạng thái</label>
                <select class="form-select">
                  <option value="">Tất cả trạng thái</option>
                  <option value="DaThanhToan">Còn hàng</option>
                  <option value="ChuaThanhToan">Hết hàng</option>
                </select>
              </div>
              <div class="col-md-3 d-flex align-items-end">
                <button class="btn btn-primary btn-add-khoi" type="button">
                  <i class="fas fa-filter"></i> Lọc
                </button>
              </div>
            </div>

            <div class="table-responsive">
              <table class="table table-hover table-bordered" id="sampleTable">
                <thead>
                  <tr>
                    <th>Mã Sản Phẩm</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Đơn Vị Tính</th>
                    <th>Số Lượng Tồn</th>
                  </tr>
                </thead>
                <tbody>
                  <tr data-id="SPDV_002" data-ten-sp="Thịt gà công nghiệp (KG)">
                    <td>CK001</td>
                    <td>Thịt gà công nghiệp</td>
                    <td>KG</td>
                    <td>3</td>
                  </tr>
                  <tr data-id="SPDV_001" data-ten-sp="Sữa tươi TH True Milk (Lốc 4)">
                    <td>ST001</td>
                    <td>Sữa tươi TH True Milk (Lốc 4)</td>
                    <td>Lốc</td>
                    <td>250</td>
                  </tr>
                  <tr data-id="SPDV_003" data-ten-sp="Cá hồi Na Uy (Fillet) (Gram)">
                    <td>CH002</td>
                    <td>Cá hồi Na Uy (Fillet)</td>
                    <td>Gram</td>
                    <td>0</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-md-0" id="form-col">
        <div class="tile">
          <h3 class="tile-title" id="form-title">Chi Tiết Tồn Kho</h3>
          <p>Dữ liệu bám sát Bảng <strong>BaoCaoTonKho</strong> .</p>
          <div class="tile-body">
            <form id="report-form" class="form-readonly">
              
              <div class="mb-3">
                <label class="form-label">Kỳ Báo Cáo</label>
                <input class="form-control" type="text" id="form-ky-bao-cao" readonly>
              </div>

              <div class="mb-3">
                <label class="form-label">Sản Phẩm - Đơn Vị</label>
                <input class="form-control" type="text" id="form-ten-sp" readonly>
              </div>
              
              <hr>
              <h5 class="mb-3">Chi tiết số liệu </h5>

              <div class="mb-3">
                <label class="form-label">Tồn Đầu Kỳ</label>
                <input class="form-control" type="text" id="form-ton-dau-ky" readonly>
              </div>
              
              <div class="mb-3">
                <label class="form-label">Nhập Trong Kỳ</label>
                <input class="form-control" type="text" id="form-nhap-trong-ky" readonly>
              </div>
              
              <div class="mb-3">
                <label class="form-label">Xuất Trong Kỳ</label>
                <input class="form-control" type="text" id="form-xuat-trong-ky" readonly>
              </div>
              
              <div class="mb-3">
                <label class="form-label fw-bold">Tồn Cuối Kỳ (Hiện tại)</label>
                <input class="form-control fw-bold" type="text" id="form-ton-cuoi-ky" readonly>
              </div>

            </form>
          </div>
          <div class="tile-footer">
            <a class="btn btn-secondary" href="#" id="btn-cancel">
              <i class="bi bi-x-circle-fill me-2"></i>Đóng
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>



  <!-- js riêng ở đây nha! -->
    <script src="~/assets/js/DanhSachHangTonKho.js"></script>

