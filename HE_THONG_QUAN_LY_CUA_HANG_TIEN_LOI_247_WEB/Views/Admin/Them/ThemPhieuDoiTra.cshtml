@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.entities;

@{

    ViewData["title"] = "Thêm Phiếu Đổi Trả";
}
  <!-- Css riêng ở đây nha -->
  <link rel="stylesheet" href="~/assets/lib/select2/dist/css/select2.min.css">
  <link rel="stylesheet" href="~/assets/css/ThemNhanSu.css">


  <!-- Main sidebar ở đây nha -->





<main class="app-content">
    <div class="app-title">
      <div>
        <h1><i class="bi bi-arrow-counterclockwise"></i> Tạo Phiếu Đổi Trả</h1>
        <p>Ghi nhận hàng hoá khách hàng hoàn trả lại cửa hàng</p>
      </div>
      <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
        <li class="breadcrumb-item"><a href="#">Giao dịch & Hoàn trả</a></li>
        <li class="breadcrumb-item"><a href="#">Tạo phiếu đổi trả</a></li>
      </ul>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="tile">
          <h3 class="tile-title">Thông tin Hoàn Trả</h3>
          <div class="tile-body">
            <div class="row">
              <div class="col-md-3">
                <label class="form-label fw-bold">Mã Hóa Đơn Gốc (*)</label>
                <div class="input-group">
                  <input class="form-control" type="text" id="input-ma-hoa-don" placeholder="VD: HD001">
                  <button class="btn btn-primary" type="button" id="btn-check-hd">
                      <i class="bi bi-search"></i>
                  </button>
                </div>
              </div>

              <div class="col-md-3">
                <label class="form-label">Khách hàng</label>
                <input class="form-control" type="text" id="input-khach-hang" readonly placeholder="---">
                <input type="hidden" id="input-khach-hang-id">
              </div>

              <div class="col-md-3">
                <label class="form-label">Chính sách áp dụng (*)</label>
                <select class="form-select" id="select-chinh-sach">
                  <option value="">-- Chọn chính sách --</option>
                  <option value="CS01">Đổi trả trong 7 ngày (Lỗi NSX)</option>
                  <option value="CS02">Khách VIP (Hoàn tiền 100%)</option>
                  <option value="CS03">Hoàn trả có thu phí (Khách đổi ý)</option>
                </select>
              </div>

              <div class="col-md-3">
                <label class="form-label">Ngày đổi trả (*)</label>
                <input class="form-control" type="date" id="input-ngay-tra">
              </div>
            </div>
          </div>

          <hr>

          <h3 class="tile-title">Chi Tiết Sản Phẩm Trả</h3>
          <div class="tile-body">
            <div class="row mb-3 p-3 bg-light border rounded ms-1 me-1">
              <div class="col-md-4">
                <label class="form-label">Chọn sản phẩm từ hóa đơn</label>
                <select class="form-select" id="select-san-pham-tra" disabled>
                  <option value="">-- Vui lòng nhập Mã HĐ trước --</option>
                </select>
              </div>

              <div class="col-md-2">
                <label class="form-label">Số lượng trả</label>
                <input class="form-control" type="number" id="input-sl-tra" min="1" value="1" disabled>
              </div>
              
               <div class="col-md-4">
                <label class="form-label">Lý do trả hàng</label>
                <input class="form-control" type="text" id="input-ly-do" placeholder="VD: Hàng lỗi, khách đổi ý~" disabled>
              </div>

              <div class="col-md-2 d-flex align-items-end">
                <button class="btn btn-primary w-100" type="button" id="btn-add-return-item" disabled>
                  <i class="bi bi-plus-lg"></i> Thêm dòng
                </button>
              </div>
            </div>

            <div class="table-responsive">
              <table class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                  <tr>
                    <th>Mã SP</th>
                    <th>Tên sản phẩm</th>
                    <th>Đơn giá mua</th>
                    <th style="width: 100px;">SL Trả</th>
                    <th>Lý do hoàn trả</th>
                    <th class="text-end">Thành tiền hoàn</th>
                    <th class="text-center" style="width: 50px;"><i class="bi bi-trash"></i></th>
                  </tr>
                </thead>
                <tbody id="tbody-tra-hang">
                   <tr>
                    <td colspan="7" class="text-center text-muted fst-italic">Chưa có sản phẩm nào được chọn</td>
                  </tr>
                </tbody>
              </table>
            </div>

            <div class="row mt-3">
              <div class="col-md-8">
                 <label class="form-label">Ghi chú chung:</label>
                 <textarea class="form-control" rows="2" placeholder="Nhập ghi chú thêm nếu cần~"></textarea>
              </div>
              <div class="col-md-4 text-end">
                <div class="p-3 bg-light border rounded">
                    <h4 class="mb-2">Tổng tiền hoàn lại:</h4>
                    <h2 class="fw-bold text-danger" id="lbl-tong-tien-hoan">0 đ</h2>
                    <input type="hidden" id="hidden-tong-tien-hoan" value="0">
                </div>
              </div>
            </div>

          </div>

          <div class="tile-footer text-end">
            <a class="btn btn-secondary me-2" href="danh-sach-phieu-doi-tra.html">
                <i class="bi bi-x-circle me-2"></i>Hủy bỏ
            </a>
            <button class="btn btn-success" type="button" onclick="alert('Lưu phiếu thành công (Demo)!')">
                <i class="bi bi-floppy-fill me-2"></i>Hoàn tất phiếu
            </button>
          </div>
        </div>
      </div>
    </div>
  </main>







  <!-- js riêng ở đây nha! -->
<script src="~/assets/js/ThemPhieuDoiTra.js"></script>
