@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

@{
    ViewData["title"] = "Báo Cáo Doanh Thu";
}

<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="bi bi-graph-up"></i> Báo cáo Doanh thu</h1>
            <p>Thống kê doanh thu theo kỳ</p>
        </div>
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
            <li class="breadcrumb-item">Phân tích & Báo cáo</li>
            <li class="breadcrumb-item active"><a asp-controller="PhanTichBaoCao" asp-action="BaoCaoDoanhThu">Báo cáo doanh thu</a></li>
        </ul>
    </div>

    <!-- Biểu đồ doanh thu -->
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <h3 class="tile-title">Doanh Thu 6 Tháng Gần Đây</h3>
                <div class="tile-body">
                    <div style="height: 400px;">
                        <canvas id="doanhThuChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lịch sử báo cáo -->
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-title-w-btn d-flex justify-content-between align-items-center">
                    <h3 class="title" style="margin-bottom: 0;">Lịch Sử Báo Cáo Doanh Thu</h3>
                    <a class="btn btn-success" href="#">
                        <i class="fas fa-file-excel"></i> Xuất Excel
                    </a>
                </div>

                <div class="tile-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered" id="sampleTable">
                            <thead>
                                <tr>
                                    <th>Mã Báo Cáo</th>
                                    <th>Ngày Lập</th>
                                    <th>Kỳ Báo Cáo</th>
                                    <th class="text-end">Tổng Doanh Thu</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var lstBaoCao = ViewData["lstBaoCao"] as List<BaoCaoDoanhThu>;
                                    if (lstBaoCao != null && lstBaoCao.Any())
                                    {
                                        foreach (var bc in lstBaoCao)
                                        {
                                            <tr>
                                                <td>@bc.Id</td>
                                                <td>@bc.BaoCao.NgayLap.ToString("dd/MM/yyyy")</td>
                                                <td>@bc.KyBaoCao</td>
                                                <td class="text-end fw-bold text-success">@bc.TongDoanhThu.ToString("N0") đ</td>
                                                <td class="text-center">
                                                    <a class="btn btn-success btn-sm" href="#" title="Tải về (Excel)">
                                                        <i class="fas fa-download"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    // else
                                    // {
                                    //     <tr>
                                    //         <td colspan="5" class="text-center text-muted">Chưa có báo cáo nào</td>
                                    //     </tr>
                                    // }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Dữ liệu doanh thu 6 tháng
        var doanhThuData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewData["DoanhThuTheoThang"]));
        
        var labels = doanhThuData.map(item => item.thang);
        var data = doanhThuData.map(item => item.doanhThu);
        
        var ctx = document.getElementById('doanhThuChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Doanh Thu (VNĐ)',
                    data: data,
                    backgroundColor: 'rgba(54, 162, 235, 0.7)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return value.toLocaleString('vi-VN') + ' đ';
                            }
                        }
                    }
                },
                plugins: {
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return 'Doanh thu: ' + context.parsed.y.toLocaleString('vi-VN') + ' đ';
                            }
                        }
                    }
                }
            }
        });
    </script>
}

