@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

@{
    ViewData["title"] = "Báo Cáo Tồn Kho";
}

<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="bi bi-box-seam"></i> Báo cáo Tồn Kho</h1>
            <p>Thống kê tình hình tồn kho theo kỳ</p>
        </div>
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
            <li class="breadcrumb-item">Phân tích & Báo cáo</li>
            <li class="breadcrumb-item active"><a asp-controller="PhanTichBaoCao" asp-action="BaoCaoTonKho">Báo cáo tồn kho</a></li>
        </ul>
    </div>

    <!-- Danh sách báo cáo -->
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-title-w-btn d-flex justify-content-between align-items-center">
                    <h3 class="title" style="margin-bottom: 0;">Danh Sách Báo Cáo Tồn Kho</h3>
                    <a class="btn btn-success" href="#">
                        <i class="fas fa-file-excel"></i> Xuất Excel
                    </a>
                </div>

                <div class="tile-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered" id="sampleTable">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Mã Báo Cáo</th>
                                    <th>Mã Sản Phẩm Đơn Vị</th>
                                    <th class="text-end">Tồn Đầu Kỳ</th>
                                    <th class="text-end">Nhập Trong Kỳ</th>
                                    <th class="text-end">Xuất Trong Kỳ</th>
                                    <th class="text-end">Tồn Cuối Kỳ</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (ViewData["lstBaoCaoTonKho"] != null)
                                    {
                                        List<BaoCaoTonKho> baoCaos = ViewData["lstBaoCaoTonKho"] as List<BaoCaoTonKho>;
                                        int stt = 1;
                                        foreach (BaoCaoTonKho bc in baoCaos)
                                        {
                                            var cssClass = bc.TonCuoiKy < 5 ? "table-danger" : 
                                                          bc.TonCuoiKy < 10 ? "table-warning" : "";
                                            

                                            <tr class="@cssClass">
                                                <td>@stt</td>
                                                <td>@bc.BaoCaoId</td>
                                                <td>@bc.SanPhamDonViId</td>
                                                <td class="text-end">@bc.TonDauKy</td>
                                                <td class="text-end text-success">+@bc.NhapTrongKy</td>
                                                <td class="text-end text-danger">-@bc.XuatTrongKy</td>
                                                <td class="text-end fw-bold">@bc.TonCuoiKy</td>
                                                <td class="text-center">                                          
                                                    <a class="btn btn-success btn-sm" href="#" title="Tải về">
                                                        <i class="fas fa-download"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            stt++;
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
