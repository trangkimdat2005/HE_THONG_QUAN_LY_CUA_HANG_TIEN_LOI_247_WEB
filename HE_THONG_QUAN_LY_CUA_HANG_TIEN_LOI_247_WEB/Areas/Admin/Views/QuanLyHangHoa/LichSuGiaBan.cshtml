@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

@{

    ViewData["title"] = "Lịch Sử Giá Bán";
}
  <!-- Main sidebar ở đây nha -->

  
    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="bi bi-cash-stack"></i> Lịch sử Giá bán</h1>
          <p>Quản lý lịch sử thay đổi giá của sản phẩm</p>
        </div>
        <ul class="app-breadcrumb breadcrumb side">
          <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
          <li class="breadcrumb-item">Quản lý hàng hoá</li>
            <li class="breadcrumb-item active"><a asp-controller="QuanLyHangHoa" asp-action="LichSuGiaBan">Lịch sử giá bán</a>
          </li>
        </ul>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="tile">
            <div
              class="tile-title-w-btn d-flex justify-content-between align-items-center">
              <h3 class="title" style="margin-bottom: 0">Lịch Sử Giá Bán</h3>
            </div>

            <div class="tile-body">
              <div class="table-responsive">
                <table
                  class="table table-hover table-bordered"
                  id="sampleTable"
                >
                  <thead>
                    <tr>
                      <th>Mã Lịch Sử</th>
                      <th>Tên Sản Phẩm</th>
                      <th>Đơn Vị Tính</th>
                      <th>Giá Bán</th>
                      <th>Ngày Bắt Đầu</th>
                      <th>Ngày Kết Thúc</th>
                    </tr>
                  </thead>
                  <tbody>
                    @{
                                    if (ViewData["lstLichSuGiaBan"] != null)
                                    {
                                        List<LichSuGiaBan> lichSus = ViewData["lstLichSuGiaBan"] as List<LichSuGiaBan>;
                                        if (lichSus != null && lichSus.Any())
                                        {
                                            foreach (LichSuGiaBan ls in lichSus)
                                            {
                                                <tr>
                                                    <td>@ls.Id</td>
                                                    <td>
                                                        <strong>@ls.SanPham.Ten</strong>
                                                        <br />
                                                        <small class="text-muted">Mã SP: @ls.SanPhamId</small>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-info">@ls.DonVi.Ten (@ls.DonVi.KyHieu)</span>
                                                    </td>
                                                    <td class="text-end">
                                                        <strong class="text-success">@ls.GiaBan.ToString("N0") đ</strong>
                                                    </td>
                                                    <td>@ls.NgayBatDau.ToString("dd/MM/yyyy")</td>
                                                    <td>@ls.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                                                </tr>
                                            }
                                        }
                                    }
                                }
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
