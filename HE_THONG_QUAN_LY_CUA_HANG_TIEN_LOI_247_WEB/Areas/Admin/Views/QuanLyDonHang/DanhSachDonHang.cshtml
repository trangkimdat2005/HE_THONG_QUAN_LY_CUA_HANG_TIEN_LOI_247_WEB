@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

@{
    ViewData["title"] = "Danh Sách Đơn Hàng";
}

  <main class="app-content">
    <div class="app-title">
      <div>
        <h1><i class="bi bi-card-checklist"></i> Danh Sách Đơn Hàng</h1>
        <p>Quản lý và tra cứu lịch sử các đơn hàng đã bán</p>
      </div>
      <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
        <li class="breadcrumb-item active">
          <a>Danh Sách Đơn Hàng</a>
        </li>
      </ul>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="tile">
          <div class="tile-body">
            <div class="table-responsive">
              <table class="table table-hover table-bordered" id="sampleTable">
                <thead>
                  <tr>
                    <th>Mã Hóa Đơn</th>
                    <th>Ngày Lập</th>
                    <th>Mã Nhân Viên</th>
                    <th>Mã Khách Hàng</th>
                    <th>Tổng Tiền</th>
                    @* <th>Trạng Thái</th> *@
                    <th>Thao tác</th>
                  </tr>
                </thead>
                <tbody>
                  @{
                    if (ViewData["lstHoaDon"] != null)
                    {
                      List<HoaDon> hoaDons = ViewData["lstHoaDon"] as List<HoaDon>;
                      foreach (HoaDon hd in hoaDons)
                      {
                        var statusClass = hd.TrangThai == "Đã thanh toán" ? "bg-success" 
                                        : hd.TrangThai == "Chưa thanh toán" ? "bg-warning" 
                                        : "bg-danger";
                                            var statusText = hd.TrangThai == "Đã thanh toán" ? "Đã Thanh Toán"
                                            : hd.TrangThai == "Chưa thanh toán" ? "Chưa Thanh Toán"
                                            : "Chưa Thanh Toán";

                        <tr>
                          <td>@hd.Id</td>
                          <td>@hd.NgayLap.ToString("dd/MM/yyyy HH:mm")</td>
                          <td>@hd.NhanVienId</td>
                          <td>@hd.KhachHangId</td>
                          <td class="text-end fw-bold">@(hd.TongTien?.ToString("N0") ?? "0") đ</td>
                          
                          <td class="text-center">
                            <a class="btn btn-info btn-sm" 
                               asp-controller="QuanLyDonHang" 
                               asp-action="XemChiTietHoaDon" 
                               asp-route-id="@hd.Id"
                               title="Xem chi tiết">
                              <i class="fas fa-eye"></i>
                            </a>
                          </td>
                        </tr>
                      }
                    }
                  }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
