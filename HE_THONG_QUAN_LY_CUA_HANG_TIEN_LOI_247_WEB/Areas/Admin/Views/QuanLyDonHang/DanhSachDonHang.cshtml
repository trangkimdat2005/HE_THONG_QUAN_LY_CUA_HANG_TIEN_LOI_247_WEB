@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

@{

    ViewData["title"] = "Danh Sách Đơn Hàng";
}
  <!-- Main sidebar ở đây nha -->







  <main class="app-content">
    <div class="app-title">
      <div>
        <h1><i class="bi bi-card-checklist"></i> Danh Sách Đơn Hàng</h1>
        <p>Quản lý và tra cứu lịch sử các đơn hàng đã bán</p>
      </div>
      <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
        <li class="breadcrumb-item active">
          <a >Danh Sách Đơn Hàng</a>
        </li>
      </ul>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="tile">
          <div class="tile-body">
            <div class="row mb-3">
              <div class="col-md-3">
                <label class="form-label">Từ ngày</label>
                <input class="form-control" type="date" />
              </div>
              <div class="col-md-3">
                <label class="form-label">Đến ngày</label>
                <input class="form-control" type="date" />
              </div>
              <div class="col-md-3">
                <label class="form-label">Trạng thái</label>
                <select class="form-select">
                  <option value="">Tất cả trạng thái</option>
                  <option value="DaThanhToan">Đã Thanh Toán</option>
                  <option value="ChuaThanhToan">Chưa Thanh Toán</option>
                  <option value="Huy">Đã Hủy</option>
                </select>
              </div>
              <div class="col-md-3 d-flex align-items-end">
                <button class="btn btn-primary btn-add-khoi" type="button">
                  <i class="fas fa-filter"></i> Lọc
                </button>
              </div>
            </div>

            <div class="table-responsive">
              <table class="table table-hover table-bordered" id="sampleTable">
                <thead>
                  <tr>
                    <th>Mã Hóa Đơn</th>
                    <th>Ngày Lập</th>
                    <th>Nhân Viên Lập</th>
                    <th>Khách Hàng</th>
                    <th>Tổng Tiền</th>
                    <th>Trạng Thái</th>
                    <th>Thao tác</th>
                  </tr>
                </thead>
                <tbody>
                  @{
                    var lstHoaDon = ViewData["lstHoaDon"] as List<HoaDon>;
                    if (lstHoaDon != null && lstHoaDon.Any())
                    {
                      foreach (var hd in lstHoaDon)
                      {
                        var statusClass = hd.TrangThai == "DaThanhToan" ? "bg-success" 
                                        : hd.TrangThai == "ChuaThanhToan" ? "bg-warning" 
                                        : "bg-danger";
                        var statusText = hd.TrangThai == "DaThanhToan" ? "Đã Thanh Toán" 
                                       : hd.TrangThai == "ChuaThanhToan" ? "Chưa Thanh Toán" 
                                       : "Đã Hủy";

                        <tr>
                          <td>@hd.Id</td>
                          <td>@hd.NgayLap.ToString("dd/MM/yyyy, HH:mm")</td>
                          <td>@hd.NhanVien?.HoTen</td>
                          <td>@hd.KhachHang?.HoTen</td>
                          <td>@hd.TongTien?.ToString("N0") đ</td>
                          <td>
                            <span class="badge @statusClass">@statusText</span>
                          </td>
                          <td>
                            <a class="btn btn-info btn-sm" 
                               asp-controller="QuanLyDonHang" 
                               asp-action="XemChiTietHoaDon" 
                               asp-route-id="@hd.Id"
                               title="Xem chi tiết">
                              <i class="fas fa-eye"></i>
                            </a>
                          </td>
                        </tr>
                      }
                    }
                  }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
