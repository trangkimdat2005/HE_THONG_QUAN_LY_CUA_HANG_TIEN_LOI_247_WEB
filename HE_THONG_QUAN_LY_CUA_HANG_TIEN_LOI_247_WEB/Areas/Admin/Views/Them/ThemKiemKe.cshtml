@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

@{

    ViewData["title"] = "Thêm Kiểm Kê";
}
  <!-- Css riêng ở đây nha -->
     <link rel="stylesheet" href="~/assets/lib/select2/dist/css/select2.min.css">
     <link rel="stylesheet" href="~/assets/css/ThemKiemKe.css">

  <!-- Main sidebar ở đây nha -->






  <main class="app-content">
    <div class="app-title">
      <div>
        <h1><i class="bi bi-clipboard-plus"></i> Tạo Phiếu Kiểm Kê Kho</h1>
        <p>Lập phiếu ghi nhận số lượng tồn kho thực tế</p>
      </div>
      <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
        <li class="breadcrumb-item"><a href="#">Quản lý kho</a></li>
        <li class="breadcrumb-item"><a href="#">Kiểm kê sản phẩm</a></li>
        <li class="breadcrumb-item"><a href="#">Tạo phiếu mới</a></li>
      </ul>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="tile">

          <h3 class="tile-title">Thông Tin Chung</h3>
          <div class="tile-body">
            <div class="row">
              <div class="col-md-6">
                <label class="form-label">Nhân viên thực hiện</label>
                <select class="form-control" id="select-nhan-vien">
                  <option value="">-- Chọn nhân viên --</option>
                  <option value="NV001">Nguyễn Văn A (Quản lý)</option>
                  <option value="NV002" selected>Trần Thị B (Nhân viên kho)</option>
                  <option value="NV003">John Doe (Nhân viên kho)</option>
                </select>
              </div>

              <div class="col-md-6">
                <label class="form-label">Ngày Kiểm Kê</label>
                <input class="form-control" type="date" id="input-ngay-kiem-ke">
              </div>
            </div>
          </div>

          <hr>

          <h3 class="tile-title">Chi Tiết Sản Phẩm Kiểm Kê</h3>
          <div class="tile-body">
            <div class="row mb-3 gx-2">
              <div class="col-md-4">
                <label class="form-label">Sản phẩm</label>
                <select class="form-control" id="select-san-pham">
                  <option value="">-- Tìm theo tên hoặc mã --</option>
                  <option value="SPDV_001" data-name="Sting Dâu (Chai 330ml)">Sting Dâu (Chai 330ml)</option>
                  <option value="SPDV_002" data-name="Bánh Chocopie (Hộp 12 cái)">Bánh Chocopie (Hộp 12 cái)</option>
                  <option value="SPDV_003" data-name="Pepsi Lon (Lon 330ml)">Pepsi Lon (Lon 330ml)</option>
                  <option value="SPDV_005" data-name="Sữa TH True Milk (Hộp 1L)">Sữa TH True Milk (Hộp 1L)</option>
                  <option value="SPDV_006" data-name="Thịt gà C.P (Khay 500g)">Thịt gà C.P (Khay 500g)</option>
                </select>
              </div>

              <div class="col-md-2">
                <label class="form-label">Số lượng thực tế</label>
                <input class="form-control" type="number" id="input-thuc-te" min="0">
              </div>

              <div class="col-md-4">
                <label class="form-label">Ghi chú (ketQua)</label>
                <input class="form-control" type="text" id="input-ghi-chu" placeholder="Ghi chú nếu có~">
              </div>

              <div class="col-md-2 d-flex align-items-end">
                <button class="btn btn-primary w-100" type="button" id="add-item-btn">
                  <i class="bi bi-plus-lg"></i> Thêm
                </button>
              </div>
            </div>

            <div class="table-responsive">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Sản phẩm</th>
                    <th class="text-end">Tồn Hệ Thống</th>
                    <th class="text-end">Tồn Thực Tế</th>
                    <th class="text-end">Chênh Lệch</th>
                    <th>Ghi chú (Kết quả)</th>
                    <th style="width: 50px;">Xoá</th>
                  </tr>
                </thead>
                <tbody id="kiem-ke-body">
                </tbody>
              </table>
            </div>
          </div>

          <div class="tile-footer">
            <div class="d-flex justify-content-end">
              <div>
                <a class="btn btn-secondary" href="#"><i class="bi bi-x-circle-fill me-2"></i>Huỷ</a>
                <button class="btn btn-primary" type="button" id="btn-save-phieu">
                  <i class="bi bi-check-circle-fill me-2"></i>Lưu Phiếu Kiểm Kê
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>


  <!-- js riêng ở đây nha! -->
  <script src="~/assets/lib/select2/dist/js/select2.full.min.js" asp-append-version="true" defer></script>
  <script src="~/assets/js/ThemKiemKe.js" asp-append-version="true" defer></script>

