@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

@{

    ViewData["title"] = "Lịch Làm Việc";
}
  <!-- Main sidebar ở đây nha -->






    <main class="app-content">
      <div class="app-title">
        <div>
          <h1>
            <i class="bi bi-calendar-check"></i> Chấm Công
          </h1>
          <p>Theo dõi lịch sử chấm công của nhân viên</p>
        </div>
        <ul class="app-breadcrumb breadcrumb side">
          <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
          <li class="breadcrumb-item">Quản lý nhân sự</li>
          <li class="breadcrumb-item active"><a href="#">Lịch làm việc</a></li>
        </ul>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="tile">
            <div class="tile-body">
              <div class="row mb-3">
                <div class="col-md-3">
                  <label class="form-label">Từ ngày</label>
                            <input class="form-control" type="date" id="min" />
                </div>
                <div class="col-md-3">
                  <label class="form-label">Đến ngày</label>
                            <input class="form-control" type="date" id="max" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                            <button class="btn btn-primary btn-add-khoi" type="button" id="btn-filter">
                    <i class="fas fa-filter"></i> Lọc
                  </button>
                </div>
              </div>

              <div class="table-responsive">
                <table
                  class="table table-hover table-bordered"
                  id="sampleTable"
                >
                  <thead>
                    <tr>
                      <th>Mã Chấm Công</th>
                      <th>Tên Nhân Viên</th>
                      <th>Ngày</th>
                      <th>Giờ Vào</th>
                      <th>Giờ Ra</th>
                      <th>Ghi Chú</th>
                    </tr>
                  </thead>
                            <tbody id="table-body-cham-cong">
                    @* <tr>
                      <td>CC001</td>
                      <td>John Doe</td>
                      <td>02/11/2025</td>
                      <td>07:58:10</td>
                      <td>17:02:30</td>
                      <td>(Không)</td>
                    </tr> *@
                                @{
                                    if (ViewData["lstChamCong"] != null)
                                    {
                                        List<ChamCong> ccs = ViewBag.lstChamCong;
                                        foreach(var cc in ccs)
                                        {
                                            <tr>
                                                <td>@cc.Id</td>
                                                <td>@cc.NhanVien.HoTen</td>
                                                <td>@cc.Ngay.ToString("dd/MM/yyyy")</td>
                                                <td>@cc.GioVao</td>
                                                <td>@cc.GioRa</td>
                                                <td>@(cc.GhiChu == "" ? "(Không)" : cc.GhiChu)</td>
                                            </tr>
                                        }
                                    }
                                }
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
<script src="~/assets/js/LicLamViecLoc.js" asp-append-version="true" defer></script>





