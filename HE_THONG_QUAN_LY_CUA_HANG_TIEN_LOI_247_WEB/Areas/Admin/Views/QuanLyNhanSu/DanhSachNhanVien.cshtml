@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

    @{

        ViewData["title"] = "Danh Sách Nhân Viên";
    }
  <!-- Main sidebar ở đây nha -->






    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="bi bi-person-circle"></i> Quản lý Nhân sự</h1>
          <p>Quản lý thông tin nhân viên và chấm công</p>
        </div>
        <ul class="app-breadcrumb breadcrumb side">
          <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
          <li class="breadcrumb-item">Quản lý nhân sự</li>
          <li class="breadcrumb-item active">
            <a href="#">Danh sách nhân viên</a>
          </li>
        </ul>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="tile">
            <div
              class="tile-title-w-btn d-flex justify-content-between align-items-center"
            >
              <h3 class="title" style="margin-bottom: 0">
                Danh Sách Nhân Viên
              </h3>
                    <a class="btn btn btn-primary btn-add-khoi" asp-controller="Them" asp-action="ThemNhanSu">
                        <i class="fas fa-plus"></i> Thêm nhân viên mới
              </a>
            </div>

            <div class="tile-body">
              <div class="table-responsive">
                <table
                  class="table table-hover table-bordered"
                  id="sampleTable"
                >
                  <thead>
                    <tr>
                      <th>Mã Nhân Viên</th>
                      <th>Họ Tên</th>
                      <th>Chức Vụ</th>
                      <th>Số Điện Thoại</th>
                      <th>Email</th>
                      <th>Ngày Vào Làm</th>
                      <th>Trạng Thái</th>
                      <th>Thao tác</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>NV001</td>
                      <td>John Doe</td>
                      <td>Quản lý</td>
                      <td>0901234567</td>
                      <td>john.doe@example.com</td>
                      <td>01/01/2025</td>
                      <td><span class="badge bg-success">Đang làm</span></td>
                      <td class="text-center">
                        <a
                          class="btn btn-info btn-sm me-1 btn-edit-khoi "
                        
                                           asp-controller="Sua" asp-action="SuaNhanSu"
                          title="Sửa"
                        >
                          <i class="fas fa-edit"></i>
                        </a>
                        <a class="btn btn-danger btn-sm btn-delete-khoi" href="#" title="Xóa">
                          <i class="fas fa-trash-alt"></i>
                        </a>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>



