@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities

@{

    ViewData["title"] = "Phân Công Ca Làm Việc";
}
  <!-- Main sidebar ở đây nha -->






    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="bi bi-calendar-plus"></i> Phân Công Ca Làm Việc</h1>
          <p>Sắp xếp lịch làm việc cho nhân viên</p>
        </div>
        <ul class="app-breadcrumb breadcrumb side">
          <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
          <li class="breadcrumb-item">Quản lý nhân sự</li>
          <li class="breadcrumb-item active">
            <a href="#">Phân công ca làm việc</a>
          </li>
        </ul>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="tile">
            <div
              class="tile-title-w-btn d-flex justify-content-between align-items-center"
            >
              <h3 class="title" style="margin-bottom: 0">Lịch Phân Công</h3>
                    <a class="btn btn-primary btn-add-khoi" asp-controller="Them" asp-action="ThemPhanCongCaLamViec" >
                <i class="fas fa-plus"></i> Thêm phân công mới
              </a>
            </div>

            <div class="tile-body" >
              <div class="row mb-3">
                <div class="col-md-3">
                  <label class="form-label">Tên ca</label>
                            <select class="form-select" id="filter-ca">
                    <option value="">Tất cả các ca</option>
                                @{
                                    if (ViewData["lstCaLamViec"] != null)
                                    {
                                        List<CaLamViec> clvs = ViewBag.lstCaLamViec;
                                        foreach(var clv in clvs)
                                        {
                                            <option value="@clv.TenCa">@clv.TenCa</option>
                                        }
                                    }
                                }
                  </select>
                </div>
                <div class="col-md-3">
                  <label class="form-label">Chọn ngày</label>
                            <input class="form-control" type="date" id="filter-ngay" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                            <button class="btn btn-primary btn-add-khoi" type="button" id="btn-loc-ca">
                    <i class="fas fa-filter"></i> Lọc
                  </button>
                </div>
              </div>

              <div class="table-responsive">
                <table
                  class="table table-hover table-bordered"
                  id="sampleTable"
                >
                  <thead>
                    <tr>
                      <th>Ngày</th>
                      <th>Tên Nhân Viên</th>
                      <th>Tên Ca</th>
                      <th>Giờ Bắt Đầu</th>
                      <th>Giờ Kết Thúc</th>
                      <th>Thao tác</th>
                    </tr>
                  </thead>
                  <tbody>
                                @{
                                    if (ViewData["lstPhanCong"] != null)
                                    {
                                        List<PhanCongCaLamViec> pcs = ViewBag.lstPhanCong;
                                        foreach (var pc in pcs)
                                        {
                                            <tr>
                                                <td>@pc.Ngay</td>
                                                <td>@pc.NhanVien.HoTen</td>
                                                <td>@pc.CaLamViec.TenCa</td>
                                                <td>@pc.CaLamViec.ThoiGianBatDau</td>
                                                <td>@pc.CaLamViec.ThoiGianKetThuc</td>
                                                <td class="text-center">
                                                    <a class="btn btn-info btn-sm me-1 btn-edit-khoi " 
                                                       asp-controller="Sua" asp-action="SuaPhanCongCaLamViec" asp-route-id="@pc.Id"
                                                       title="Sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a class="btn btn-danger btn-sm btn-delete-khoi btn-xoa-phan-cong" data-id="@pc.Id" href="#" title="Xóa">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
       
             
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script src="~/assets/js/SuaPhanCong.js" asp-append-version="true" defer></script>
    <script src="~/assets/js/DanhSachPC.js" asp-append-version="true" defer></script>

