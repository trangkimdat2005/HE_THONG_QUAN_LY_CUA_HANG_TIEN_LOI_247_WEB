@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

@{
    ViewData["title"] = "Chi Tiết Phiếu Xuất";
    var phieuXuat = ViewData["PhieuXuat"] as PhieuXuat;
    var chiTietList = ViewData["ChiTietPhieuXuat"] as List<ChiTietPhieuXuat>;
}
  <!-- Css riêng ở đây nha -->
   <link rel="stylesheet" href="~/assets/css/XemChiTietPhieuXuat.css">

  <!-- Main sidebar ở đây nha -->






<main class="app-content">
    <div class="app-title">
      <div>
        <h1><i class="bi bi-file-earmark-text"></i> Chi Tiết Phiếu Xuất Kho</h1>
        <p>Thông tin chi tiết của phiếu xuất @phieuXuat?.Id</p>
      </div>
      <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
        <li class="breadcrumb-item">Quản lý kho hàng</li>
        <li class="breadcrumb-item"><a asp-controller="QuanLyKhoHang" asp-action="DanhSachPhieuXuat">Danh sách phiếu xuất</a></li>
        <li class="breadcrumb-item active">Chi tiết phiếu xuất</li>
      </ul>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="tile">
          
          <h3 class="tile-title">Thông tin Phiếu Xuất: @phieuXuat?.Id</h3>
          <div class="tile-body">
            <div class="row">
              
              <div class="col-md-4 info-group">
                <label>Mã Phiếu Xuất</label>
                <p>@phieuXuat?.Id</p>
              </div>
              <div class="col-md-4 info-group">
                <label>Khách Hàng</label>
                <p>@phieuXuat?.KhachHang?.HoTen (@phieuXuat?.KhachHangId)</p>
              </div>
              <div class="col-md-4 info-group">
                <label>Ngày Xuất</label>
                <p>@phieuXuat?.NgayXuat.ToString("dd/MM/yyyy")</p>
              </div>
              <div class="col-md-4 info-group">
                <label>Nhân Viên Xuất</label>
                <p>@phieuXuat?.NhanVien?.HoTen (@phieuXuat?.NhanVienId)</p>
              </div>

            </div>
          </div>
          
          <hr>

          <h3 class="tile-title">Danh Sách Sản Phẩm</h3>
          <div class="tile-body">
            <div class="table-responsive">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Sản phẩm</th>
                    <th class="text-end">Số lượng</th>
                    <th class="text-end">Đơn giá</th>
                    <th class="text-end">Thành tiền</th>
                  </tr>
                </thead>
                <tbody id="chi-tiet-phieu-xuat-body">
                  @if (chiTietList != null && chiTietList.Any())
                  {
                      var index = 1;
                      decimal tongTien = 0;
                      foreach (var chiTiet in chiTietList)
                      {
                          var tenSanPham = chiTiet.SanPhamDonVi?.SanPham?.Ten ?? "N/A";
                          var donVi = chiTiet.SanPhamDonVi?.DonVi?.Ten ?? "";
                          var thanhTien = chiTiet.SoLuong * chiTiet.DonGia;
                          tongTien += thanhTien;
                          
                          <tr>
                              <td>@index</td>
                              <td>@tenSanPham (@donVi) - @chiTiet.SanPhamDonViId</td>
                              <td class="text-end">@chiTiet.SoLuong</td>
                              <td class="text-end">@chiTiet.DonGia.ToString("N0") đ</td>
                              <td class="text-end">@thanhTien.ToString("N0") đ</td>
                          </tr>
                          
                          index++;
                      }
                      
                      ViewData["TongTienTinhToan"] = tongTien;
                  }
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="4" class="fw-bold text-end">Tổng Tiền</td>
                    <td class="fw-bold text-end h5 text-primary">
                        @{
                            var tongTienHienThi = ViewData["TongTienTinhToan"] != null 
                                ? ((decimal)ViewData["TongTienTinhToan"]).ToString("N0") 
                                : phieuXuat?.TongTien.ToString("N0") ?? "0";
                        }
                        @tongTienHienThi đ
                    </td>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>

          <div class="tile-footer">
            <div class="d-flex justify-content-end">
              <div>
                <a class="btn btn-secondary" asp-controller="QuanLyKhoHang" asp-action="DanhSachPhieuXuat"><i class="bi bi-x-circle-fill me-2"></i>Quay lại</a>
                <button class="btn btn-primary" type="button" onclick="window.print();">
                  <i class="bi bi-printer-fill me-2"></i>In Phiếu
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>


