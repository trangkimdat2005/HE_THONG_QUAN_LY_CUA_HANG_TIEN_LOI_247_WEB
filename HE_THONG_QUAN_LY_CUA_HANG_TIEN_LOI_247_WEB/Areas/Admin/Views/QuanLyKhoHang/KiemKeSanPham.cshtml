@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

@{

	ViewData["title"] = "Kiểm Kê Sản Phẩm";
}
<!-- Main sidebar ở đây nha -->






<main class="app-content">
	<div class="app-title">
		<div>
			<h1><i class="bi bi-clipboard-check"></i> Kiểm Kê Sản Phẩm</h1>
			<p>Lịch sử các lần kiểm kê kho hàng</p>
		</div>
		<ul class="app-breadcrumb breadcrumb side">
			<li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
			<li class="breadcrumb-item">Quản lý kho hàng</li>
			<li class="breadcrumb-item active"><a asp-controller="QuanLyKhoHang" asp-action="KiemKeSanPham">Kiểm kê sản phẩm</a></li>
		</ul>
	</div>

	<div class="row">
		<div class="col-md-12">
			<div class="tile">
				<div class="tile-title-w-btn d-flex justify-content-between align-items-center">
					<h3 class="title" style="margin-bottom: 0">Lịch Sử Kiểm Kê</h3>
					<a class="btn btn-primary btn-add-khoi" asp-controller="Them" asp-action="ThemKiemKe">
						<i class="fas fa-plus"></i> Tạo phiếu kiểm kê mới
					</a>
				</div>

					<div class="table-responsive">
						<table class="table table-hover table-bordered" id="sampleTable">
							<thead>
								<tr>
									<th>Mã Kiểm Kê</th>
									<th>Ngày Kiểm Kê</th>
									<th>Nhân Viên Thực Hiện</th>
									<th>Kết Quả (Chênh lệch)</th>
									<th>Thao tác</th>
								</tr>
							</thead>
							<tbody>
								@{
									if (ViewData["lstKiemKe"] != null)
									{
										List<KiemKe> kiemKes = ViewBag.lstKiemKe;
										foreach (KiemKe kiemKe in kiemKes)
										{
											<tr>
												<td>@kiemKe.Id</td>
												<td>@kiemKe.NgayKiemKe.ToString("dd/MM/yyyy") </td>
												<td>@kiemKe.NhanVien.HoTen</td>
												<td>@kiemKe.KetQua</td>
												<td class="text-center">
													<a class="btn btn-info btn-sm me-1 btn-edit-khoi " asp-controller="QuanLyKhoHang" asp-action="XemChiTietKiemKe" asp-route-id="@kiemKe.Id"
													   title="Xem chi tiết">
														<i class="fas fa-eye"></i>
													</a>
												</td>
											</tr>
										}

									}
								}

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>











