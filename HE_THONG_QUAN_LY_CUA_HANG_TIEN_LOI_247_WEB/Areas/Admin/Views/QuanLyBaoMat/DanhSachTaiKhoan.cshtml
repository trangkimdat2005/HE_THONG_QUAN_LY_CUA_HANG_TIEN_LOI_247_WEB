@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

@{
    ViewData["title"] = "Danh Sách quyền";
}
<!-- Main sidebar ở đây nha -->
<link href="~/assets/css/DanhSachRole.css" rel="stylesheet">
<link rel="stylesheet" href="~/assets/lib/select2/dist/css/select2.min.css">

<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="bi bi-person-gear"></i> Quản lý Quyền</h1>
            <p>Quản lý các vai trò và phân quyền</p>
        </div>
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
            <li class="breadcrumb-item">Quản lý bảo mật</li>
            <li class="breadcrumb-item active"><a href="#">Quản lý quyền</a></li>
        </ul>
    </div>

    <div class="row">
        <div class="col-lg-12" id="table-panel">
            <div class="tile">
                <div class="tile-title-w-btn d-flex justify-content-between align-items-center">
                    <h3 class="title" style="margin-bottom: 0">Danh Sách Vai Trò</h3>
                    <a class="btn btn-primary btn-add-khoi" href="#">
                        <i class="fas fa-plus"></i> Thêm vai trò mới
                    </a>
                </div>

                <div class="tile-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered" id="sampleTable">
                            <thead>
                                <tr>
                                    <th>Mã Vai Trò</th>
                                    <th>Tên Vai Trò</th>
                                    <th>Mô Tả</th>
                                    <th>Trạng Thái</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (ViewData["lstRole"] != null)
                                    {
                                        List<Role> roles = ViewBag.lstRole;
                                        foreach (var role in roles)
                                        {
                                            bool isActive = string.Equals(role.TrangThai, "Hoạt động", StringComparison.OrdinalIgnoreCase);
                                            <tr>
                                                <td>@role.Code</td>
                                                <td>@role.Ten</td>
                                                <td>@role.MoTa</td>
                                                <td>
                                                    @{
                                                        if (isActive)
                                                        {
                                                            <span class="badge bg-success">@role.TrangThai</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-danger">@role.TrangThai</span>
                                                        }
                                                    }
                                                </td>
                                                <td>
                                                    <!-- SỬA Ở ĐÂY: Thêm data-id="@role.Id" -->
                                                    <a class="btn btn-info btn-sm me-1 btn-edit-khoi" href="#" title="Sửa"
                                                       data-id="@role.Id"
                                                       data-code="@role.Code"
                                                       data-ten="@role.Ten"
                                                       data-mota="@role.MoTa"
                                                       data-trangthai="@role.TrangThai">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <!-- SỬA Ở ĐÂY: Thêm data-id="@role.Id" -->
                                                    <a class="btn btn-danger btn-sm btn-delete-khoi" href="#" title="Xóa"
                                                       data-id="@role.Id">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4" id="form-panel" style="display: none;">
            <div class="tile">
                <h3 class="tile-title" id="form-title">Thêm Vai Trò Mới</h3>
                <div class="tile-body">
                    <form id="role-form">
                        <!-- Thêm input ẩn để lưu ID khi Sửa -->
                        <input type="hidden" id="roleId" />

                        <div class="mb-3">
                            <label class="form-label" for="roleCode">Mã Vai Trò</label>
                            <input class="form-control" id="roleCode" type="text" placeholder="Vd: SALE_MANAGER" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="roleName">Tên Vai Trò</label>
                            <input class="form-control" id="roleName" type="text" placeholder="Vd: Quản lý bán hàng" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="roleDescription">Mô Tả</label>
                            <textarea class="form-control" id="roleDescription" rows="3"></textarea>
                        </div>
                        <div class="mb-3" id="field-chon-quyen">
                            <label class="form-label">Gán Quyền</label>
                            <select class="form-control" id="select-quyen" multiple="multiple" style="width: 100%;">

                                <!-- SỬA Ở ĐÂY: Dùng lstPermission (List<Permission>) -->
                                @{
                                    if (ViewData["lstPermission"] != null)
                                    {
                                        List<Permission> permissions = ViewBag.lstPermission;
                                        foreach (var p in permissions)
                                        {
                                            <option value="@p.Id">@p.Ten (@p.Code)</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="roleStatus">Trạng Thái</label>
                            <select class="form-select" id="roleStatus">
                                <option value="Hoạt động">Hoạt động</option>
                                <option value="Không hoạt động">Không hoạt động</option>
                            </select>
                        </div>
                        <div class="tile-footer">
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-check-circle-fill me-2"></i>Lưu
                            </button>
                            <a class="btn btn-secondary" href="#" id="btn-cancel-form">
                                <i class="bi bi-x-circle-fill me-2"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="~/assets/lib/select2/dist/js/select2.full.min.js"></script>
<script src="~/assets/js/DanhSachRole.js" asp-append-version="true" defer></script>