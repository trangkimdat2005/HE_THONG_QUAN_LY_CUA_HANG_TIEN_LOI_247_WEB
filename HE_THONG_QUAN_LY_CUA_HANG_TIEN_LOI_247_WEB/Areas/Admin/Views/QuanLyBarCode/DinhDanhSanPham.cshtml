@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

@{
    ViewData["title"] = "Định Danh Sản Phẩm";
}
  <!-- Css riêng ở đây nha -->
  <link rel="stylesheet" href="~/assets/css/DinhDanhSanPham.css" >

<main class="app-content">
    <div class="app-title">
      <div>
        <h1><i class="bi bi-upc-scan"></i> Quản lý Mã (QR/Barcode)</h1>
        <p>Quản lý mã định danh cho từng đơn vị sản phẩm</p>
      </div>
      <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
        <li class="breadcrumb-item">Quản lý barcode</li>
        <li class="breadcrumb-item active"><a asp-controller="QuanLyBarCode" asp-action="DinhDanhSanPham">Định danh sản phẩm</a></li>
      </ul>
    </div>

    <div class="row" id="main-row-container">

      <div class="col-md-12" id="list-col">
        <div class="tile">
          <div class="tile-title-w-btn d-flex justify-content-between align-items-center">
            <h3 class="title" style="margin-bottom: 0">Danh Sách Mã Định Danh</h3>
            <a class="btn btn-primary btn-add-khoi" href="#" id="show-add-form-btn">
              <i class="fas fa-plus"></i> Tạo mã mới
            </a>
          </div>

          <div class="tile-body">
            <div class="table-responsive">
              <table class="table table-hover table-bordered" id="sampleTable">
                <thead>
                  <tr>
                    <th>Mã Định Danh</th>
                    <th>Sản Phẩm Đơn Vị ID</th>
                    <th>Loại Mã</th>
                    <th>Mã Code</th>
                    <th>Đường Dẫn</th>
                    <th>Thao tác</th>
                  </tr>
                </thead>
                <tbody>
                  @{
                    if (ViewData["lstMaDinhDanh"] != null)
                    {
                      List<MaDinhDanhSanPham> maDinhDanhs = ViewData["lstMaDinhDanh"] as List<MaDinhDanhSanPham>;
                      foreach (MaDinhDanhSanPham mdd in maDinhDanhs)
                      {
                        <tr data-id="@mdd.Id" 
                            data-san-pham-don-vi-id="@mdd.SanPhamDonViId" 
                            data-loai-ma="@mdd.LoaiMa"
                            data-ma-code="@mdd.MaCode" 
                            data-duong-dan="@mdd.DuongDan">
                          <td>@mdd.Id</td>
                          <td>@mdd.SanPhamDonViId</td>
                          <td>
                            <span class="badge @(mdd.LoaiMa == "QR" ? "bg-info" : "bg-primary")">
                              @mdd.LoaiMa
                            </span>
                          </td>
                          <td>@mdd.MaCode</td>
                          <td>
                            @if (!string.IsNullOrEmpty(mdd.DuongDan))
                            {
                              <small>@mdd.DuongDan</small>
                            }
                            else
                            {
                              <span class="text-muted">Chưa có</span>
                            }
                          </td>
                          <td class="text-center">
                            <a class="btn btn-info btn-sm me-1 btn-edit" title="Sửa">
                              <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-danger btn-sm btn-delete-khoi" href="#" data-id="@mdd.Id" title="Xóa">
                              <i class="fas fa-trash-alt"></i>
                            </a>
                          </td>
                        </tr>
                      }
                    }
                  }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-0" id="form-col">
        <div class="tile">
          <h3 class="tile-title" id="form-title">Tạo Mã Mới</h3>
          <div class="tile-body">
            <form id="identifier-form">

              <div class="image-upload-container">
                <img class="image-preview" id="form-image-preview" src="https://via.placeholder.com/200?text=Ảnh+Code" alt="Ảnh Code">
                <input class="image-edit-input" type="file" id="form-image-upload" accept=".png, .jpg, .jpeg">
                <label class="image-edit-label" for="form-image-upload"><i class="bi bi-camera-fill"></i></label>
              </div>

              <div class="mb-3">
                <label class="form-label">Mã Định Danh (id)</label>
                <input class="form-control" type="text" id="form-id" placeholder="Mã sẽ được tạo tự động" readonly>
              </div>

              <div class="mb-3">
                <label class="form-label">Sản Phẩm - Đơn Vị</label>
                <select class="form-control" id="form-select-sanpham" style="width: 100%;">
                  <option value="">-- Chọn sản phẩm & đơn vị --</option>
                  @{
                    if (ViewData["lstSanPhamDonVi"] != null)
                    {
                      List<SanPhamDonVi> sanPhamDonVis = ViewData["lstSanPhamDonVi"] as List<SanPhamDonVi>;
                      foreach (SanPhamDonVi sp in sanPhamDonVis)
                      {
                        <option value="@sp.Id">@sp.Id</option>
                      }
                    }
                  }
                </select>
              </div>

              <div class="mb-3">
                <label class="form-label">Loại Mã</label>
                <div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="form-loai-ma" id="radio-barcode" value="Barcode" checked>
                    <label class="form-check-label" for="radio-barcode">Barcode</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="form-loai-ma" id="radio-qr" value="QR">
                    <label class="form-check-label" for="radio-qr">QR Code</label>
                  </div>
                </div>
              </div>

              <div class="mb-3">
                <label class="form-label">Mã Code (Dữ liệu)</label>
                <input class="form-control" type="text" id="form-ma-code" placeholder="V.d: 8935049001438" required>
              </div>

            </form>
          </div>
          <div class="tile-footer">
            <button class="btn btn-primary" type="button" id="btn-submit">
              <i class="bi bi-check-circle-fill me-2"></i>Thêm
            </button>

            <button class="btn btn-info" type="button" id="btn-edit-mode" style="display: none;">
              <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </button>

            <a class="btn btn-secondary" href="#" id="btn-cancel">
              <i class="bi bi-x-circle-fill me-2"></i>Huỷ
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- js riêng ở đây nha! -->
  <script src="~/assets/js/DinhDanhSanPham.js" asp-append-version="true" defer></script>
