@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

@{

    ViewData["title"] = "Định Danh Sản Phẩm";
}
  <!-- Css riêng ở đây nha -->
  <link rel="stylesheet" href="~/assets/css/DinhDanhSanPham.css" >

  <!-- Main sidebar ở đây nha -->






<main class="app-content">
    <div class="app-title">
      <div>
        <h1><i class="bi bi-upc-scan"></i> Quản lý Mã (QR/Barcode)</h1>
        <p>Quản lý mã định danh cho từng đơn vị sản phẩm</p>
      </div>
      <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
        <li class="breadcrumb-item">Quản lý barcode</li>
        <li class="breadcrumb-item active">
          <a href="#">Định danh sản phẩm</a>
        </li>
      </ul>
    </div>

    <div class="row" id="main-row-container">

      <div class="col-md-12" id="list-col">
        <div class="tile">
          <div class="tile-title-w-btn d-flex justify-content-between align-items-center">
            <h3 class="title" style="margin-bottom: 0">
              Danh Sách Mã Định Danh
            </h3>
            <a class="btn btn-primary btn-add-khoi" href="#" id="show-add-form-btn">
              <i class="fas fa-plus"></i> Tạo mã mới
            </a>
          </div>

          <div class="tile-body">
            <div class="table-responsive">
              <table class="table table-hover table-bordered" id="sampleTable">
                <thead>
                  <tr>
                    <th>Tên Sản Phẩm</th>
                    <th>Đơn Vị Tính</th>
                    <th>Loại Mã</th>
                    <th>Mã Code (Dạng chữ)</th>
                    <th>Hình Ảnh</th>
                    <th>Thao tác</th>
                  </tr>
                </thead>
                <tbody>
                  <tr data-id="MDD_001" data-san-pham-don-vi-id="SPDV_001" data-loai-ma="Barcode"
                    data-ma-code="8935049001438" data-duong-dan="https://i.imgur.com/g80aX8k.png"
                    data-ten-sp="Sữa tươi TH True Milk (Lốc 4)">
                    <td>Sữa tươi TH True Milk</td>
                    <td>Lốc 4</td>
                    <td>Barcode</td>
                    <td>8935049001438</td>
                    <td>
                      <img src="https://i.imgur.com/g80aX8k.png" alt="Barcode"
                        style="height: 40px; width: 100px; object-fit: cover" />
                    </td>
                    <td class="text-center">
                      <a class="btn btn-info btn-sm me-1 btn-edit" href="#" title="Sửa">
                        <i class="fas fa-edit"></i>
                      </a>
                      <a class="btn btn-danger btn-sm btn-delete-khoi" href="#" title="Xóa">
                        <i class="fas fa-trash-alt"></i>
                      </a>
                    </td>
                  </tr>
                  <tr data-id="MDD_002" data-san-pham-don-vi-id="SPDV_002" data-loai-ma="QR"
                    data-ma-code="CK001-KG-LOHANG123" data-duong-dan="https://i.imgur.com/8N0g32L.png"
                    data-ten-sp="Thịt gà công nghiệp (KG)">
                    <td>Thịt gà công nghiệp</td>
                    <td>KG</td>
                    <td>QR</td>
                    <td>CK001-KG-LOHANG123</td>
                    <td>
                      <img src="https://i.imgur.com/8N0g32L.png" alt="QR Code" style="height: 40px; width: 40px" />
                    </td>
                    <td class="text-center">
                      <a class="btn btn-info btn-sm me-1 btn-edit" href="#" title="Sửa">
                        <i class="fas fa-edit"></i>
                      </a>
                      <a class="btn btn-danger btn-sm btn-delete-khoi" href="#" title="Xóa">
                        <i class="fas fa-trash-alt"></i>
                      </a>
                    </td>
                  </tr>
                  <tr data-id="MDD_003" data-san-pham-don-vi-id="SPDV_003" data-loai-ma="Barcode"
                    data-ma-code="CH002-GRAM" data-duong-dan="https://i.imgur.com/g80aX8k.png"
                    data-ten-sp="Cá hồi Na Uy (Gram)">
                    <td>Cá hồi Na Uy</td>
                    <td>Gram</td>
                    <td>Barcode</td>
                    <td>CH002-GRAM</td>
                    <td>
                      <img src="https://i.imgur.com/g80aX8k.png" alt="Barcode"
                        style="height: 40px; width: 100px; object-fit: cover" />
                    </td>
                    <td class="text-center">
                      <a class="btn btn-info btn-sm me-1 btn-edit" href="#" title="Sửa">
                        <i class="fas fa-edit"></i>
                      </a>
                      <a class="btn btn-danger btn-sm btn-delete-khoi" href="#" title="Xóa">
                        <i class="fas fa-trash-alt"></i>
                      </a>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-0" id="form-col">
        <div class="tile">
          <h3 class="tile-title" id="form-title">Tạo Mã Mới</h3>
          <div class="tile-body">
            <form id="identifier-form">

              <div class="image-upload-container">
                <img class="image-preview" id="form-image-preview" src="https://via.placeholder.com/200?text=Ảnh+Code"
                  alt="Ảnh Code">
                <input class="image-edit-input" type="file" id="form-image-upload" accept=".png, .jpg, .jpeg">
                <label class="image-edit-label" for="form-image-upload"><i class="bi bi-camera-fill"></i></label>
              </div>

              <div class="mb-3">
                <label class="form-label">Mã Định Danh (id)</label>
                <input class="form-control" type="text" id="form-id" placeholder="Mã sẽ được tạo tự động" readonly>
              </div>

              <div class="mb-3">
                <label class="form-label">Sản Phẩm - Đơn Vị</label>
                <select class="form-control" id="form-select-sanpham" style="width: 100%;">
                  <option value="">-- Chọn sản phẩm & đơn vị --</option>
                  <option value="SPDV_001">Sữa tươi TH True Milk (Lốc 4)</option>
                  <option value="SPDV_002">Thịt gà công nghiệp (KG)</option>
                  <option value="SPDV_003">Cá hồi Na Uy (Gram)</option>
                  <option value="SPDV_004">Sting Dâu (Chai)</option>
                </select>
              </div>

              <div class="mb-3">
                <label class="form-label">Loại Mã</label>
                <div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="form-loai-ma" id="radio-barcode" value="Barcode"
                      checked>
                    <label class="form-check-label" for="radio-barcode">Barcode</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="form-loai-ma" id="radio-qr" value="QR">
                    <label class="form-check-label" for="radio-qr">QR Code</label>
                  </div>
                </div>
              </div>

              <div class="mb-3">
                <label class="form-label">Mã Code (Dữ liệu)</label>
                <input class="form-control" type="text" id="form-ma-code" placeholder="V.d: 8935049001438" required>
              </div>

            </form>
          </div>
          <div class="tile-footer">
            <button class="btn btn-primary" type="button" id="btn-submit">
              <i class="bi bi-check-circle-fill me-2"></i>Thêm
            </button>

            <button class="btn btn-info" type="button" id="btn-edit-mode" style="display: none;">
              <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </button>

            <a class="btn btn-secondary" href="#" id="btn-cancel">
              <i class="bi bi-x-circle-fill me-2"></i>Huỷ
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>











  <!-- js riêng ở đây nha! -->
  <script src="~/assets/js/DinhDanhSanPham.js"></script>
