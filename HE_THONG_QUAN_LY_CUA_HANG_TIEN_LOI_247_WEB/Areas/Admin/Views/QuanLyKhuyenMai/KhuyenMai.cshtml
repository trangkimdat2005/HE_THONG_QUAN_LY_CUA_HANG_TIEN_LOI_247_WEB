@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

@{

	ViewData["title"] = "Khuyến Mãi";
}
<!-- Main sidebar ở đây nha -->






<main class="app-content">
	<div class="app-title">
		<div>
			<h1><i class="bi bi-percent"></i> Quản lý Khuyến mãi</h1>
			<p>Quản lý các chương trình khuyến mãi và mã giảm giá</p>
		</div>
		<ul class="app-breadcrumb breadcrumb side">
			<li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
			<li class="breadcrumb-item active">
				<a asp-controller="QuanLyKhuyenMai" asp-action="KhuyenMai">Quản lý khuyến mãi</a>
			</li>
		</ul>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="tile">
				<div class="tile-title-w-btn d-flex justify-content-between align-items-center">
					<h3 class="title" style="margin-bottom: 0">
						Danh Sách Chương Trình
					</h3>
					<a class="btn btn-primary btn-add-khoi" asp-controller="Them" asp-action="ThemMaKhuyenMai">
						<i class="fas fa-plus"></i> Tạo chương trình mới
					</a>
				</div>

				<div class="tile-body">
					<div class="table-responsive">
						<table class="table table-hover table-bordered"
							   id="sampleTable">
							<thead>
								<tr>
									<th>Mã Chương Trình</th>
									<th>Tên Chương Trình</th>
									<th>Loại Khuyến Mãi</th>
									<th>Ngày Bắt Đầu</th>
									<th>Ngày Kết Thúc</th>
									<th>Mô Tả</th>
									<th>Thao tác</th>
								</tr>
							</thead>
							<tbody>
								@{
									if (ViewData["lstKhuyenMai"] != null)
									{
										List<MaKhuyenMai> maKhuyenMais = ViewBag.lstKhuyenMai;
										foreach (MaKhuyenMai maKhuyenMai in maKhuyenMais)
										{
											<tr>
												<td>@maKhuyenMai.Id</td>
												<td>@maKhuyenMai.ChuongTrinh.Ten</td>
												<td>@maKhuyenMai.ChuongTrinh.Loai</td>
												<td>@maKhuyenMai.ChuongTrinh.NgayBatDau.ToString("dd/MM/yyyy") </td>
												<td>@maKhuyenMai.ChuongTrinh.NgayKetThuc.ToString("dd/MM/yyyy") </td>
												<td>@maKhuyenMai.ChuongTrinh.MoTa</td>
												<td class="text-center">
													<a class="btn btn-info btn-sm me-1 btn-edit-khoi " asp-controller="Sua" asp-action="SuaMaKhuyenMai" title="Sửa"><i class="fas fa-edit"></i> </a>
													<a class="btn btn-danger btn-sm btn-delete-khoi" href="#" title="Xóa"><i class="fas fa-trash-alt"></i></a>
												</td>
											</tr>
										}

									}
								}


							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>
