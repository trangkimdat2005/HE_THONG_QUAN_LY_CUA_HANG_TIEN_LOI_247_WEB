@using HE_THONG_QUAN_LY_CUA_HANG_TIEN_LOI_247_WEB.Models.Entities;

@{

    ViewData["title"] = "Sửa Hoàn Trả";
}
  <!-- Css riêng ở đây nha -->
  <link rel="stylesheet" href="~/assets/lib/select2/dist/css/select2.min.css">
  <link rel="stylesheet" href="~/assets/css/SuaHoanTra.css">


  <!-- Main sidebar ở đây nha -->






  <main class="app-content">
    <div class="app-title">
      <div>
        <h1><i class="bi bi-arrow-return-left"></i> Sửa Chính Sách Hoàn Trả</h1>
        <p>Tạo quy định mới cho việc đổi trả hàng</p>
      </div>
      <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="bi bi-house-door fs-6"></i></li>
        <li class="breadcrumb-item"><a href="#">Giao dịch & hoàn trả</a></li>
        <li class="breadcrumb-item"><a href="#">Thêm chính sách</a></li>
      </ul>
    </div>

    <div class="row">
      <div class="col-md-10 mx-auto">
        <div class="tile">
          <h3 class="tile-title">Thông tin Chính Sách</h3>
          <p>Sửa một chính sách hoàn trả</p>
          <div class="tile-body">
            <form>

              <div class="mb-3">
                <label class="form-label">Tên chính sách</label>
                <input class="form-control" type="text" placeholder="V.d: Hoàn trả 7 ngày, Đổi trả hàng điện tử~">
              </div>

              <div class="mb-3">
                <label class="form-label">Thời hạn hoàn trả (Số ngày)</label>
                <input class="form-control" type="number" placeholder="V.d: 7" min="0">
              </div>

              <div class="mb-3">
                <label class="form-label">Điều kiện</label>
                <textarea class="form-control" rows="5"
                  placeholder="Mô tả chi tiết các điều kiện áp dụng, ví dụ: Hàng còn nguyên tem, chưa qua sử dụng, có hoá đơn mua hàng~"></textarea>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label class="form-label">Áp dụng từ ngày</label>
                    <input class="form-control" type="date" id="input-tu-ngay">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <label class="form-label">Áp dụng đến ngày</label>
                    <input class="form-control" type="date" id="input-den-ngay">
                  </div>
                </div>
              </div>

              <hr>
              <h5 class="mb-3">Phạm vi áp dụng</h5>

              <div class="mb-3">
                <div class="form-check form-switch fs-5">
                  <input class="form-check-input" type="checkbox" id="check-ap-dung-toan-bo" checked>
                  <label class="form-check-label" for="check-ap-dung-toan-bo">Áp dụng cho toàn bộ cửa hàng</label>
                </div>
              </div>

              <div class="mb-3 form-field-hidden" id="field-chon-danh-muc">
                <label class="form-label">Chọn Danh mục áp dụng</label>
                <select class="form-control" id="select-danh-muc" multiple="multiple" style="width: 100%;">
                  <option value="DM001">Đồ uống</option>
                  <option value="DM002">Đồ ăn nhanh</option>
                  <option value="DM003">Hàng gia dụng</option>
                  <option value="DM004">Hoá mỹ phẩm</option>
                </select>
              </div>

            </form>
          </div>
          <div class="tile-footer">
            <button class="btn btn-primary" type="button"><i class="bi bi-check-circle-fill me-2"></i>Lưu chính
              sách</button>
            <a class="btn btn-secondary" href="#"><i class="bi bi-x-circle-fill me-2"></i>Huỷ</a>
          </div>
        </div>
      </div>
    </div>
  </main>
.js"></script>
  <script src="~/assets/lib/bootstrap/js/main.js" asp-append-version="true" defer></script>

  <!-- js riêng ở đây nha! -->
  <script src="~/assets/js/SuaHoanTra.js" asp-append-version="true" defer></script>

